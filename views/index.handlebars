{{!-- ./views/index.hbs --}}
<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
    類別
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" href="/">全部</a>
    <a class="dropdown-item" href="/?category=家居物業">家居物業</a>
    <a class="dropdown-item" href="/?category=交通出行">交通出行</a>
    <a class="dropdown-item" href="/?category=休閒娛樂">休閒娛樂</a>
    <a class="dropdown-item" href="/?category=餐飲食品">餐飲食品</a>
    <a class="dropdown-item" href="/?category=其他">其他</a>
  </div>
</div>
<p>總金額: {{{totalAmount}}}</p>
<ul>
  {{#each records}}
  <li>{{{this.name}}}&nbsp;{{{this.category}}}&nbsp;{{{this.date}}}&nbsp;{{{this.amount}}}&nbsp;
    <a href="/records/{{{this.id}}}/edit">修改</a>&nbsp;
    <form action="/records/{{{this.id}}}/?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit">刪除</button>
    </form>
  </li>
  {{/each}}
</ul>
<a href="/records/new">新增支出 </a>